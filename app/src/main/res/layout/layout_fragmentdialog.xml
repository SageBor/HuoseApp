<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_fragmentdialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/manager_account_margin"
    android:layout_marginRight="@dimen/manager_account_margin"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/roundlayout"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" >

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="订单提交成功"
                android:textColor="@color/c292d33"
                android:textSize="21dip"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:gravity="center_vertical|center_horizontal"
                android:text="我们将在30分钟处理，稍后通知您订单结果！感谢您选择:)"
                android:textSize="15dip" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_cancle"
                style="@style/grayButton"
                android:layout_width="fill_parent"
                android:layout_height="44.5dip"
                android:layout_marginRight="@dimen/manager_account_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="21sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_confirm"
                style="@style/shadwonutton"
                android:layout_width="fill_parent"
                android:layout_height="44.5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sure"
                android:textSize="21sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>