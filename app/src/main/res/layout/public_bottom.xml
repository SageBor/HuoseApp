<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/main"
        android:gravity="center_horizontal"

        android:background="@drawable/bg_head_left_text_selector"
        android:text="首页" />

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/order"
        android:gravity="center_horizontal"
        android:text="我的订单" />

    <TextView
        android:id="@+id/tv_ucenter"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/ucenter"
        android:gravity="center_horizontal"
        android:text="用户中心" />

    <TextView
        android:id="@+id/tv_hotline"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/hotline"
        android:gravity="center_horizontal"
        android:text="客服中心" />


</LinearLayout>
